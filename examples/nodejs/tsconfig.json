{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
  },
  "include": ["ts/**/*"],
  "ts-node": {
    "esm": true
  }
}